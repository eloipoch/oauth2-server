<?xml version="1.0" encoding="UTF-8"?>

<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    bootstrap="./vendor/autoload.php"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnError="false"
    stopOnFailure="false"
    stopOnIncomplete="false"
    stopOnSkipped="false"
    strict="true"
    verbose="false">

    <testsuites>
        <testsuite name="Akamon OAuth2 Server">
            <directory>./src/Akamon/OAuth2/Server/Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src</directory>
            <exclude>
                <directory>./src/Akamon/OAuth2/Server/Tests</directory>
            </exclude>
        </whitelist>
    </filter>

    <listeners>
        <listener class="\Mockery\Adapter\Phpunit\TestListener"></listener>
    </listeners>

    <logging>
        <log
            type="coverage-clover"
            target="build/logs/phpunit/coverage.xml"/>
        <log
            type="coverage-html"
            target="build/coverage"
            charset="UTF-8"
            highlight="true"
            lowUpperBound="50"
            highLowerBound="80"/>
    </logging>

</phpunit>
